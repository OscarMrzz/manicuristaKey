---
const { nombreNails, descripcion, precio, URLimagen } = Astro.props;
---

<div
  class="w-full h-80 bg-white shadow-lg rounded-2xl overflow-hidden relative"
>
  
  <div
    class="flex flex-col justify-end  p-4"
  >
    <div class="flex flex-row justify-between">
      <h2 class="text-2xl font-bold text-pink-400">{nombreNails}</h2>
      <p class="text-2xl font-bold text-pink-400">L {precio}</p>
    </div>

    <p class="text-pink-600 mt-2">{descripcion}</p>
  </div>
  <div
    class="bg-white h-60 rounded-t-2xl flex items-center justify-center overflow-hidden p-2"
  >
    <img class="w-full h-full object-cover rounded-2xl " src={URLimagen} alt={nombreNails} />
  </div>
</div>
