---
const { nombreNails, descripcion, precio, URLimagen } = Astro.props;
---

<div
  class="w-full h-80 bg-white shadow-lg rounded-2xl overflow-hidden relative"
>
  <div
    class="bg-white h-full rounded-t-2xl flex items-center justify-center overflow-hidden"
  >
    <img class="w-full h-full object-cover" src={URLimagen} alt={nombreNails} />
    <div
      class="absolute inset-0 flex flex-col justify-end bg-gradient-to-t from-white/40 to-transparent p-4"
    >
      <div class="flex flex-row justify-between ">
        <h2 class=" text-2xl font-bold text-pink-700">{nombreNails}</h2>
        <p class="text-2xl font-bold text-pink-700">L {precio}</p>
      </div>

      <p class="text-pink-600 mt-2">{descripcion}</p>
    </div>
  </div>
</div>
